<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aff0"
    tools:context="com.example.administrator.vegetarians824.dongdong.JKquestion">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/question_fanhui"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#c2c2c2"
            android:weightSum="10">
            <View
                android:id="@+id/question_jindu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#fff">
            </View>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/question_qus"
            android:lines="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/question_pic"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="150dp"
            />
        <FrameLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/question_line1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/question_an1"
                    android:background="#008fff"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
                <Button
                    android:id="@+id/question_an2"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:background="#00df00"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/question_line2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#0f0">
                <TextView
                    android:id="@+id/question_yorn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/question_exp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/question_layout3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/question_score"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="100sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/question_again"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="再试一次"
            android:textSize="16sp"
            android:textColor="#00aff0"
            android:background="#fff"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/question_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        >
        <TextView
            android:visibility="invisible"
            android:id="@+id/question_op2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="继续"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <TextView
            android:drawableLeft="@mipmap/whiteurl"
            android:id="@+id/question_op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享给好友求助"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
    </FrameLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >
        <com.example.administrator.vegetarians824.myView.RoundImageView
            android:id="@+id/xiangqing_pinglun_img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                android:id="@+id/xiangqing_pinglun_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#90000000"
                android:textSize="14sp" />
                <ImageView
                    android:id="@+id/xiangqing_pinglun_tv_lv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/xiangqing_pinglun_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Time"
                android:textColor="#90000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:lineSpacingMultiplier="1.5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/xiangqing_pinglun_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/xiangqing_pinglun_tv_imaline"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/xiangqing_pinglun_tv_ima1"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/xiangqing_pinglun_tv_ima2"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/xiangqing_pinglun_tv_ima3"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/xiangqing_pinglun_tv_ima4"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp">
        </View>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <com.example.administrator.vegetarians824.myView.RoundImageView
                android:id="@+id/danmu_ima"
                android:layout_marginLeft="16dp"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_bg6"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/danmu_name"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/deepyellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/danmu_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/danmu_zan"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/button_bg_gray3"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/danmu_zanicon"
                        android:layout_marginLeft="4dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_zan2"
                        />
                    <TextView
                        android:id="@+id/danmu_zancount"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
<GridLayout
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="2"
    android:columnCount="4">
    <LinearLayout
        android:clickable="true"
        android:id="@+id/share_weixin"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/umeng_socialize_wechat"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信好友"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/share_pengyouquan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/umeng_socialize_wxcircle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/share_qq"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/umeng_socialize_qq_on"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/share_zone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/umeng_socialize_qzone_on"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ空间"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/share_weibo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/umeng_socialize_sina_on"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微博"
            android:gravity="center"/>
    </LinearLayout>
</GridLayout>
</LinearLayout>
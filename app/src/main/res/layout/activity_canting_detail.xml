<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dongdong.CantingDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ditu_xiangqing_lin_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/renlingtv"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="认领"
            />
        <TextView
            android:id="@+id/jiucuotv"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="纠错"
            />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:textColor="#8e8e8e"
                android:id="@+id/canting_detail_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="友好素食菜单"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/canting_detail_menu2"
                android:textColor="#fff"
                android:background="@drawable/button_bg_red2"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:textColor="#8e8e8e"
                android:id="@+id/canting_detail_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/button_bg_press"
                android:id="@+id/ditu_xiangqing_show_line1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="首页"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/button_bg_press"
                android:visibility="gone"
                android:id="@+id/ditu_xiangqing_show_line2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="菜品"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/button_bg_press"
                android:id="@+id/ditu_xiangqing_show_line3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="评论"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/button_bg_press"
                android:visibility="gone"
                android:id="@+id/ditu_xiangqing_show_line4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="活动"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>
            </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
        </LinearLayout>
        <com.example.administrator.vegetarians824.myView.UserDefineScrollView
            android:id="@+id/canting_scroll"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:focusable="false"
            android:overScrollMode="never"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    >
                    <android.support.v4.view.ViewPager
                        android:id="@+id/ditu_xiangqing_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:id="@+id/ditu_xiangqing_viewGroup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="right"
                        android:orientation="horizontal" >
                    </LinearLayout>
                    <ListView
                        android:id="@+id/canting_detail_danmu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical" >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#50000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                        <TextView
                            android:singleLine="false"
                            android:ellipsize="end"
                            android:id="@+id/ditu_xiangqing_tv_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                            <LinearLayout
                                android:id="@+id/ditu_xiangqing_lv"
                                android:layout_marginLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ditu_xiangqing_tv_priceline"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:orientation="horizontal" >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥"
                                android:textColor="#ff0000"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/ditu_xiangqing_tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff0000"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textColor="#ff0000"
                                android:textSize="12sp" />

                        </LinearLayout>

                            <ImageView
                                android:visibility="gone"
                               android:layout_marginRight="4dp"
                                android:id="@+id/ditu_xiangqing_tv_tag"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                />

                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ditu_xiangqing_viewcount"
                            android:textSize="12sp"
                            android:paddingBottom="8dp"
                            android:paddingTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0次回眸"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#50000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dingweimark" />

                        <TextView
                            android:maxLines="2"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/ditu_xiangqing_tv_dizhi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:ellipsize="end"
                            android:paddingRight="20dp"
                            android:textColor="#80000000"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:background="#50000000" />
                        <LinearLayout
                            android:id="@+id/ditu_xiangqing_iv_phone"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/tel" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#50000000" />
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ditu_xiangqing_line"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ditu_xiangqing_line1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/restaurant_time"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="营业时间："
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:id="@+id/ditu_xiangqing_tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ditu_xiangqing_line2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="3">
                            <View
                                android:layout_width="1dp"
                                android:layout_height="15dp"
                                android:background="#50000000"
                                >
                            </View>
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/restaurant_park"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="停车位："
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:id="@+id/ditu_xiangqing_tv_park"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ditu_xiangqing_dish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="推荐菜"
                        android:gravity="center"
                        android:textSize="16sp"/>
                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:id="@+id/relative_addline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:id="@+id/ditu_xiangqing_prom"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:minHeight="64dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/prom"
                    />
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ditu_xiangqing_prom1"
                        android:textSize="14sp"
                        android:textColor="#ee6060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/ditu_xiangqing_prom2"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
                <com.example.administrator.vegetarians824.myView.NewGridView
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:stretchMode="columnWidth"
                    android:id="@+id/ditu_xiangqing_grid"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:layout_marginTop="4dp"
                    android:verticalSpacing="8dp"
                    android:horizontalSpacing="16dp"
                    android:background="#fff"
                    android:numColumns="auto_fit"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.example.administrator.vegetarians824.myView.NewGridView>
                <com.example.administrator.vegetarians824.myView.ListViewForScrollView
                    android:divider="@null"
                    android:id="@+id/ditu_xiangqing_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </com.example.administrator.vegetarians824.myView.ListViewForScrollView>
            </LinearLayout>
        </com.example.administrator.vegetarians824.myView.UserDefineScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#e0e0e0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/canting_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="评论..."
                    android:textColor="#90000000"
                    android:clickable="true"
                    android:textSize="16sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tiezi_pinglunnum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#f00"
                    android:clickable="true"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/share" />
                <TextView
                    android:id="@+id/ditu_xiangqing_tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="分享"
                    android:textColor="#90000000"
                    android:clickable="true"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:background="#fff"
            android:id="@+id/canting_detail_friendlylist"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </FrameLayout>

</RelativeLayout>

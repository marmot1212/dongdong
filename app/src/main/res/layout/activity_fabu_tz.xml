<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.vegetarians824.fabu.FabuTZ">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/fabu06_fanhui"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="发布帖子"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusableInTouchMode="true"
        android:focusable="false">
        <EditText
            android:id="@+id/fabu06_et1"
            android:textColorHint="#c2c2c2"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="添加标题"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2">
    </View>
    <FrameLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:focusableInTouchMode="true"
        android:focusable="false">
        <EditText
            android:id="@+id/fabu06_et2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColorHint="#c2c2c2"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="添加内容"/>
        <ImageView
            android:id="@+id/fabu_tz_emoji"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/d_hehe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fabu06_getpic"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <GridView
            android:visibility="invisible"
            android:id="@+id/gridView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:numColumns="4"
            android:columnWidth="90dp"
            android:stretchMode="columnWidth"
            android:gravity="center" >
        </GridView>
        <TextView
            android:id="@+id/fabu06_tv"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 添加图片"
            android:textColor="#a0a0a0"/>
    </FrameLayout>
    <Button
        android:id="@+id/fabu06_bt"
        android:text="发布"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"/>
    </LinearLayout>
        <FrameLayout
            android:background="#ECEFF1"
            android:id="@+id/emoji_fram_ctt"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <View
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2">
            </View>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.vegetarians824.dongdong.MapSearch"
    xmlns:zhy="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/button_bg3">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/findgray"/>
            <EditText
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:id="@+id/mapsearch_et"
                android:background="@null"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="查找餐厅、活动、酒店"
                android:textColorHint="#c2c2c2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/mapsearch_fanhui"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_weight="0"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/mapsearch_fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">
            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.administrator.vegetarians824.myView.MyImageView
                    android:id="@+id/mapsearch_ima"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    zhy:borderRadius="3dp"
                    zhy:type="round"/>
                <TextView
                    android:background="#880a0a0a"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:id="@+id/mapsearch_content"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/huodong_jump"
                    android:background="@drawable/button_bg2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/hdlogo"/>
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/jiudian_jump"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/button_bg2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/jdlogo"/>
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="酒店"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:background="#f2f2f2"
            android:visibility="invisible"
            android:divider="@null"
            android:id="@+id/mapsearch_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <TextView
            android:visibility="invisible"
            android:id="@+id/mapsearch_none"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="没有找到相关信息"/>
    </FrameLayout>
</LinearLayout>

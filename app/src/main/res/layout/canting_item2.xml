<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
   >
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <com.example.administrator.vegetarians824.myView.MyImageView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/canting_item2_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_stub"
            zhy:borderRadius="3dp"
            zhy:type="round"
            />
        <FrameLayout
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:id="@+id/canting_item2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                    <LinearLayout
                        android:id="@+id/canting_item2_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/canting_item2_park"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/canting_item2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="12sp"
                android:textColor="#a0a0a0"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/canting_item2_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:textSize="12sp"
                android:textColor="#a0a0a0"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
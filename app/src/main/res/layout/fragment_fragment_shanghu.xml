<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.vegetarians824.fabu.FragmentShanghu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <com.example.administrator.vegetarians824.myView.UserDefineScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff">
                <FrameLayout
                    android:clickable="true"
                    android:id="@+id/fabu01_getpic"
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <GridView
                        android:visibility="invisible"
                        android:id="@+id/gridView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:horizontalSpacing="5dp"
                        android:verticalSpacing="5dp"
                        android:numColumns="4"
                        android:columnWidth="90dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center" >
                    </GridView>
                    <TextView
                        android:id="@+id/fabu01_tv"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 添加图片"
                        android:textColor="#a0a0a0"/>
                </FrameLayout>
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusableInTouchMode="true"
                    android:focusable="false">
                    <EditText
                        android:id="@+id/fabu01_et1"
                        android:textColorHint="#c2c2c2"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="添加商户名称"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dingweimark"/>
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/fabu01_et2"
                        android:textSize="14sp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <RadioGroup
                        android:id="@+id/fabu01_group1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:button="@drawable/radio_bg"
                            android:layout_marginLeft="10dp"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="纯素"/>
                        <RadioButton
                            android:button="@drawable/radio_bg"
                            android:layout_marginLeft="10dp"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="净素"/>
                        <RadioButton
                            android:button="@drawable/radio_bg"
                            android:layout_marginLeft="10dp"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="蛋奶素"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <RadioGroup
                        android:id="@+id/fabu01_group2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:button="@drawable/radio_bg"
                            android:layout_marginLeft="10dp"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有停车位"/>
                        <RadioButton
                            android:button="@drawable/radio_bg"
                            android:layout_marginLeft="10dp"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无停车位"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:focusable="false">
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="营业时间"/>
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/fabu01_time1"
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center" />
                        <View
                            android:layout_width="16dp"
                            android:layout_height="1dp"
                            android:background="#606060"
                            >
                        </View>
                        <TextView
                            android:id="@+id/fabu01_time2"
                            android:layout_marginLeft="8dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/fabu01_et3"
                        android:inputType="phone"
                        android:textColorHint="#c2c2c2"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="添加联系方式，区号+电话号码"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <EditText
                        android:id="@+id/fabu01_et4"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="start"
                        android:textColorHint="#c2c2c2"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="添加评论"/>
                </LinearLayout>
                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/fabu01_bt"
                    android:text="发布"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </com.example.administrator.vegetarians824.myView.UserDefineScrollView>
    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical" >
        <android.support.v4.view.ViewPager
            android:id="@+id/ditu_xiangqing_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            >
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ditu_xiangqing_viewGroup2"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/home_module1_menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:singleLine="true"
                android:maxEms="4"
                android:ellipsize="end"
                android:id="@+id/near_type_tv"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:src="@drawable/barrow_2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_module1_menu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:textSize="12sp"
                android:id="@+id/food_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:src="@drawable/barrow_2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_module1_menu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:singleLine="false"
                android:maxEms="4"
                android:textSize="12sp"
                android:id="@+id/order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离优先"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:src="@drawable/barrow_2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_module1_menu4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:singleLine="false"
                android:maxEms="4"
                android:textSize="12sp"
                android:id="@+id/vegatype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部餐厅"/>
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:src="@drawable/barrow_2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/shipu_qiu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="80dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未找到素餐厅，还是做饭吃吧~"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="8dp"
            android:background="#fff"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="#333333">
            </View>
            <TextView
                android:textColor="#ff5e5e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为您推荐"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="#333333">
            </View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
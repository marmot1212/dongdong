<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.vegetarians824.FirstActivity">
    <FrameLayout
        android:id="@+id/jiankangtools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00aff0"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"

        >
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
        <com.example.administrator.vegetarians824.myView.RoundImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/cc_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/first_touxiang"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/avator" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/button_bg3"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/first_su"
                android:gravity="center"
                android:text="素生活"
                android:textColor="#00aff0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/first_map"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="素食地图"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/add_00"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/avator"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/box_more"/>
        </FrameLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/atext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00aff0"
        android:text="我是一条小提示"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center" />
    <FrameLayout
        android:id="@+id/home_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>

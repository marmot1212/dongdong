<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentview2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/ditu_xiangqing_viewpager2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
               >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ditu_xiangqing_viewGroup2"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal" >
            </LinearLayout>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f2f2f2">
        </View>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:columnCount="4"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/jiankang_yuansu"
                android:clickable="true"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jk01"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#2c2c2c"
                    android:text="营养查询"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/jiankang_shuguo"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jk02"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#2c2c2c"
                    android:text="时令蔬果"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/jiankang_fujin"
                android:clickable="true"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jk03"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#2c2c2c"
                    android:text="附近商户"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/jiankang_lingshi"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jk04"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#2c2c2c"
                    android:text="零食仓库"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/jiankang_tiaozhan"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jk05"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#2c2c2c"
                    android:text="知识问答"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f2f2f2">
        </View>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:focusable="false">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="40dp"
                android:focusableInTouchMode="true"
                android:focusable="false"
                android:background="@drawable/button_bg_gray2">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/findgray"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/caipu_input"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColorHint="#a2a2a2"
                    android:hint="输入食材、菜谱名称"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
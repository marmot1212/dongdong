<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.vegetarians824.video.VideoDownload">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00aff0">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/video_download_fanhui"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的下载"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="16sp"/>
    </FrameLayout>
    <FrameLayout
       android:visibility="gone"
        android:background="#f2f2f2"
        android:id="@+id/video_download_doing"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/downloadicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在下载" />
            <TextView
                android:id="@+id/downloadtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:divider="@null"
            android:id="@+id/video_download_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <LinearLayout
            android:id="@+id/lnlyOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#f2f2f2"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main__btn_delete"/>

            <Button
                android:id="@+id/btnMove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main__btn_move"/>

            <Button
                android:id="@+id/btnRename"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main__btn_rename"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
